{
  "name": "BingTranslator",
  "version": "1.0",
  "description": "A translator use Bing dict.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["lib/external/axios.min.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Change background color",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },

  "content_scripts": [
    {
      "js": [
        "lib/external/axios.min.js",
        "lib/util.js",
        "lib/QueryTarget.js",
        "lib/BingDictConverter.js",
        "content/init.js",
        "content/contentScript.js"
      ],
      "css": ["content/style.css"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ],
  "manifest_version": 2
}
